                       transformers >= 0.2.0.0 && < 0.4,
                       pipes >=4.0             && < 4.2,
                       pipes-parse >=2.0       && < 3.1,
                       pipes-safe, 
                       pipes-bytestring >= 1.0 && < 2.1,
                       transformers >= 0.3     && < 0.4,
                       text >=0.11             && < 0.12,
                       bytestring >=0.10       && < 0.11,
                       vector,
                       void
  -- hs-source-dirs:      
  default-language:    Haskell2010
  ghc-options: -O2 
