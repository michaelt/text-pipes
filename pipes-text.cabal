license:             BSD3
license-file:        LICENSE
author:              michaelt
maintainer:          what_is_it_to_do_anything@yahoo.com
category:            Text
build-type:          Simple
cabal-version:       >=1.10

library
  c-sources:    cbits/cbits.c
  include-dirs: include
  exposed-modules:     Pipes.Text, Pipes.Text.Parse, Pipes.Text.Internal
